pipeline {
    agent any
    environment {
         PATH = "/opt/maven/bin"
      }
    stages {
        stage ('Compile Stage') {

            steps {
                    sh 'mvn clean compile'

            }
        }
        stage ('Testing Stage') {

            steps {
                    sh 'mvn test'

            }
        }
        stage ('Install Stage') {
            steps {
                    sh 'mvn install'

            }
        }
    }
}